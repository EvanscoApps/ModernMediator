<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net8.0-windows</TargetFrameworks>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>

		<!-- Package info -->
		<PackageId>ModernMediator</PackageId>
		<Version>1.0.0</Version>
		<Authors>Rob Evans</Authors>
		<Description>A modern, feature-rich mediator library for .NET 8. Drop-in MediatR replacement with added features: UI thread dispatching, weak references, runtime subscribe/unsubscribe, and source generator support for AOT.</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/EvanscoApps/ModernMediator</RepositoryUrl>
		<PackageTags>mediator;cqrs;messaging;pubsub;events;maui;wpf;winforms;aot</PackageTags>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<!-- Enable WPF and WinForms for Windows target -->
	<PropertyGroup Condition="'$(TargetFramework)' == 'net8.0-windows'">
		<UseWindowsForms>true</UseWindowsForms>
		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
	</ItemGroup>

	<!-- Reference the source generator -->
	<ItemGroup>
		<ProjectReference Include="..\ModernMediator.Generators\ModernMediator.Generators.csproj"
		                  OutputItemType="Analyzer"
		                  ReferenceOutputAssembly="false" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>